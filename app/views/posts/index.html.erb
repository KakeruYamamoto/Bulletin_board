<div class="text-center">
  <div class="jumbotron jumbotron-fluid">
      <div class="container">
          <h1 class="display-3">５ちゃんねる</h1>
      </div>
  </div>
  <p id="notice"><%= notice %></p>

<div class="row">

  <div class="flex-column col-md-2">
    <ul class="side_menu flex-column nav nav-pills nav-stacked">
      <li><%= link_to "国内" ,labels_index_path(label_id: 1) %></li>
      <li><%= link_to "国際" ,labels_index_path(label_id: 2) %></li>
      <li><%= link_to "経済" ,labels_index_path(label_id: 3) %></li>
      <li><%= link_to "エンタメ" ,labels_index_path(label_id: 4) %></li>
      <li><%= link_to "スポーツ" ,labels_index_path(label_id: 5) %></li>
      <li><%= link_to "IT" ,labels_index_path(label_id: 6) %></li>
      <li><%= link_to "科学" ,labels_index_path(label_id: 7) %></li>
      <li><%= link_to "ライフ" ,labels_index_path(label_id: 8) %></li>
      <li><%= link_to "地域" ,labels_index_path(label_id: 9) %></li>
    </ul>
  </div>

    <div class="col-xs-9 offset-md-1" style="width: 60%;">
      <table class="bg-white text-center table table-bordered mb-0 mt-3">
        <tbody>
          <% @posts.each do |post| %>
          <tr style="border: 2px solid #d2d2d2;">
            <td scope="row">
              <div class="pl-5">
                <%= link_to post,class: "event_link" do %>
                  <h4><%= post.title.truncate(20) %><span class="ml-3 h6"></span></h4>

                  <%# レスの検索材料 %>
                  <% if post.comments.present? %>
                    <% post.comments.each do |comment| %>
                      <% comment %>
                    <% end %>
                  <% end %>

                <% end %>
              </div>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>



<br>

<div class="paginate" id="event_list" >
  <%= paginate @posts %>
</div>
