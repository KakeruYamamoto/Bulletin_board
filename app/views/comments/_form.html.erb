<div class="comment_form text-left">
  <%= form_with(model: [post, comment]) do |form| %>
    <% if comment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(post.errors.count, "件") %> のエラーにより、このれすを保存できませんでした</h2>
        <ul>
        <% comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name,value: "名無しさん" %>
    </div>
    <div class="field">
      <%= form.label :content %>
      <%= form.text_area :content %>
    </div>
    <br>
    <div class="actions">
      <%= form.submit "登録する",class: "btn btn-lg btn-primary " %>
    </div>
  <% end %>
</div>
