<div class="text-center">
  <div class="jumbotron jumbotron-fluid">
      <div class="container">
          <h1 class="display-3">５ちゃんねる</h1>
      </div>
  </div>
  <p id="notice"><%= notice %></p>

  <div class="mx-auto" style="width: 60%;">
    <table class="bg-white text-center table table-bordered mb-0 mt-3">
      <tbody>
        <% @posts.each do |post| %>
        <tr style="border: 2px solid #d2d2d2;">
          <td scope="row">
            <div class="pl-5">
              <%= link_to post,class: "event_link" do %>
                <h4><%= post.title.truncate(20) %><span class="ml-3 h6"></span></h4>
              <% end %>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>



